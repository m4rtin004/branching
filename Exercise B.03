#include <stdio.h>

int main() {
    float weight, height, bmi;

    printf("Enter your weight in kilograms: ");
    if (scanf("%f", &weight) != 1) {
        printf("Invalid input for weight.\n");
        return 1;
    }

    printf("Enter your height in meters (e.g., 1.75): ");
    if (scanf("%f", &height) != 1) {
        printf("Invalid input for height.\n");
        return 1;
    }

    if (height <= 0) {
        printf("Height must be greater than zero.\n");
        return 1;
    }

    bmi = weight / (height * height);

    printf("Your BMI is: %.1f\n", bmi);

    if (bmi <= 18.4) {
        printf("Status: Underweight\n");
    } 
    else if (bmi >= 18.5 && bmi <= 24.9) {
        printf("Status: Normal\n");
    } 
    else if (bmi >= 25.0 && bmi <= 39.9) {
        printf("Status: Overweight\n");
    } 
    else {
        printf("Status: Obese\n");
    }

    return 0;
}
